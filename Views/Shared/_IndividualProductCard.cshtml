@model ImageCRUD.Models.Book

<div class="card m-3" style="width: 18rem;" filter @Model.book_name.Replace(' ','_')>
    <img class="bd-placeholder-img card-img-top" width="100%" height="180" src="@WC.ImagePath@Model.book_image" aria-label="Placeholder: Image cap" preserveAspectRatio="xMidYMid slice" role="img"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96" /></img>

    <div class="card-body">
        <h5 class="card-title">@Model.book_name</h5>
        <p class="card-text">@Model.book_price $</p>
       <i><p class="card-text">@Model.Category.category_name </p></i>
        <a asp-action="Details" asp-route-id="@Model.book_id" class="btn btn-primary">View Details</a>
    </div>
</div>