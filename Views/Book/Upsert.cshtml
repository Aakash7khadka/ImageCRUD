@model ImageCRUD.Models.Book
@{
    ViewData["Title"] = "Upsert";
}
@if (Model.book_id == 0)
{
    <h3>Create Book</h3>
}
else
{
    <h3>Edit Book</h3>
}


<form method="post" enctype="multipart/form-data">
    @if (Model.book_id != 0)
    {
        <input asp-for="book_id" hidden/>
    }

<div class="row">
    <div class="col-8">
        <div class="p-3 border">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="book_name">Book Name</label>
                </div>

                <div class="col-4 ">
                    <input class="form-control" asp-for="book_name" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="book_price">Book Price</label>
                </div>
                <div class="col-4 ">
                    <input class="form-control" asp-for="book_price" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CategoryId">Category</label>
                </div>
                <div class="col-4 ">
                    <select asp-for="CategoryId" class="form-group" asp-items="@ViewBag.category_list">
                        <option disabled selected>--Select--category--</option>
                    </select>
                   
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="book_image">Image</label>
                </div>
                <div class="col-4 ">
                    <input type="file" name="files" asp-for="book_image" id="uploadBox" />
                </div>
            </div>
            <input type="submit" value="Save" />
        </div>

        
    </div>
    <div class="col-4">
        @if (Model.book_id != 0)
        {
            <img src="@WC.ImagePath@Model.book_image" width="90%" height="100%" />
        }

    </div>
</div>

</form>